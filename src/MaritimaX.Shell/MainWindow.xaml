<Window x:Class="MaritimaX.Shell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaritimaX.Shell"
        mc:Ignorable="d"
        Title="Maritima-X Command Center" Height="720" Width="1280"
        Background="#1E1E1E" Foreground="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar / Command Deck -->
        <Border Grid.Column="0" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,0,1,0">
            <StackPanel Margin="10">
                <TextBlock Text="OPERATIONS" FontWeight="Bold" FontSize="16" Foreground="#007ACC" Margin="0,0,0,10"/>
                
                <Button Content="EMERGENCY STOP" Click="Emergency_Click" Height="40" Background="#C42B1C" Foreground="White" FontWeight="Bold" Margin="0,5"/>
                <Button Content="Reset Simulation" Click="Reset_Click" Height="30" Margin="0,5"/>
                
                <TextBlock Text="TELEMETRY" FontWeight="Bold" FontSize="14" Margin="0,20,0,5"/>
                <DataGrid Name="TelemetryGrid" Height="200" Background="#2D2D30" BorderBrush="#3E3E42" />
            </StackPanel>
        </Border>

        <!-- Integration Bridge (Unity View) -->
        <Border Grid.Column="1" Name="UnityContainer" Background="Black">
            <TextBlock Text="Initializing 3D Bridge..." HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
        </Border>
    </Grid>
</Window>
